@model Product

<form method="post" class="form">

	<div asp-validation-summary="All"></div>

	<h2>Title</h2>
	<input asp-for="Title" class="form-control" value="@Model.Title"/>
	<span asp-validation-for="Title"></span>

	<h2 class="mt-3">Description</h2>
	<textarea asp-for="Description" class="form-control" value="@Model.Description" ></textarea>
	<span asp-validation-for="Description"></span>

	<h2 class="mt-3">ISBN</h2>
	<input asp-for="ISBN" class="form-control" value="@Model.ISBN" />
	<span asp-validation-for="ISBN"></span>

	<h2 class="mt-3">Author</h2>
	<input asp-for="Author" class="form-control" value="@Model.Author" />
	<span asp-validation-for="Author"></span>

	<h2 class="mt-3">List Price</h2>
	<input asp-for="ListPrice" class="form-control" value="@Model.ListPrice" />
	<span asp-validation-for="ListPrice"></span>

	<h2 class="mt-3">Price for 1-50</h2>
	<input asp-for="Price" class="form-control" value="@Model.Price" />
	<span asp-validation-for="Price"></span>

	<h2 class="mt-3">Price for 50+</h2>
	<input asp-for="Price50" class="form-control" value="@Model.Price50" />
	<span asp-validation-for="Price50"></span>

	<h2 class="mt-3">Price for 100+</h2>
	<input asp-for="Price100" class="form-control" value="@Model.Price100" />
	<span asp-validation-for="Price100"></span>



	<input type="submit" class="mt-3 btn btn-primary" value="Update" />
	<a class="btn btn-outline-secondary mt-3" asp-area="Admin" asp-controller="Product" asp-action="Index">Back to list</a>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}