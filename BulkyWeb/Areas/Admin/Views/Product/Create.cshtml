@model ProductVM

<form method="post" class="form">

	<div asp-validation-summary="All"></div>

	<h2>Title</h2>
	<input asp-for="product.Title" class="form-control" />
	<span asp-validation-for="product.Title"></span>

	<h2 class="mt-3">Description</h2>
	<textarea asp-for="product.Description" class="form-control"></textarea>
	<span asp-validation-for="product.Description"></span>

	<h2 class="mt-3">ISBN</h2>
	<input asp-for="product.ISBN" class="form-control" />
	<span asp-validation-for="product.ISBN"></span>

	<h2 class="mt-3">Author</h2>
	<input asp-for="product.Author" class="form-control" />
	<span asp-validation-for="product.Author"></span>

	<h2 class="mt-3">List Price</h2>
	<input asp-for="product.ListPrice" class="form-control" />
	<span asp-validation-for="product.ListPrice"></span>

	<h2 class="mt-3">Price for 1-50</h2>
	<input asp-for="product.Price" class="form-control" />
	<span asp-validation-for="product.Price"></span>

	<h2 class="mt-3">Price for 50+</h2>
	<input asp-for="product.Price50" class="form-control" />
	<span asp-validation-for="product.Price50"></span>

	<h2 class="mt-3">Price for 100+</h2>
	<input asp-for="product.Price100" class="form-control" />
	<span asp-validation-for="product.Price100"></span>

	<h2 class="mt-3">Category</h2>
	<select asp-for="product.CategoryId" asp-items="@Model.categoryList" class="form-select">
		<option disabled selected>--Select Category--</option>

	</select>
	<span asp-validation-for="product.CategoryId"></span>
	
	<h2 class="mt-3">Image url</h2>
	<input asp-for="product.ImageUrl" class="form-control" />
	<span asp-validation-for="product.ImageUrl"></span>

	<input type="submit" class="mt-3 btn btn-primary" value="Create" />
	<a class="btn btn-outline-secondary mt-3" asp-area="Admin" asp-controller="Product" asp-action="Index">Back to list</a>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}