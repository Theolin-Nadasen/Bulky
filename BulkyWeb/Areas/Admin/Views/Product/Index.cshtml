@model List<Product>

<div class="row">
	<div class="col-6">
		<h3 class="text-primary">Product List</h3>
	</div>
	<div class="col-6 text-end">
		<a asp-area="Admin" asp-controller="Product" asp-action="create" class="btn btn-primary"> <i class="bi bi-patch-plus-fill"></i> Create New</a>
	</div>
</div>

<partial name="_Notification" />

<table class="table table-dark table-bordered mt-3">
	<tr>
		<th>
			Title
		</th>
		<th>
			ISBN
		</th>
		<th>
			Author
		</th>
		<th>
			Price
		</th>
		<th>
			Category
		</th>
		<th>
			Actions
		</th>
	</tr>

	@foreach (var obj in Model)
	{
		<tr>
			<td>@obj.Title</td>
			<td>@obj.ISBN</td>
			<td>@obj.Author</td>
			<td>@obj.Price</td>
			<td>@obj.Category</td>
			<td>
				<div class="btn-group">
					<a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
					<a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete </a>
				</div>
			</td>
		</tr>
	}

</table>