@page
@model BulkyWeb_Razor.Pages.Categories.CreateModel

<form method="post" class="form">

	<div asp-validation-summary="All"></div>

	<h2>Category Name</h2>
	<input asp-for="category.Name" class="form-control" />
	<span asp-validation-for="category.Name"></span>

	<h2 class="mt-3">Display Order</h2>
	<input asp-for="category.DisplayOrder" class="form-control" />
	<span asp-validation-for="category.DisplayOrder"></span>

	<input type="submit" class="mt-3 btn btn-primary" value="Create" />
	<a class="btn btn-outline-secondary mt-3" asp-page="/categories/index">Back to list</a>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
